<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

    <class>com.example.sep6_backend.api.model.Directors</class>
    <class>com.example.sep6_backend.api.model.Movies</class>
    <class>com.example.sep6_backend.api.model.People</class>
    <class>com.example.sep6_backend.api.model.Ratings</class>
    <class>com.example.sep6_backend.api.model.Stars</class>
    <properties>
      <property name="toplink.jdbc.url" value="${spring.datasource.url}"/>
      <property name="toplink.jdbc.driver" value="${spring.datasource.driver-class-name}"/>
      <property name="toplink.jdbc.user" value="${spring.datasource.username}"/>
      <property name="toplink.jdbc.password" value="${spring.datasource.password}"/>
      <property name="hibernate.connection.url" value="${spring.datasource.url}"/>
      <property name="hibernate.connection.driver_class" value="${spring.datasource.driver-class-name}"/>
      <property name="hibernate.connection.username" value="${spring.datasource.username}"/>
      <property name="hibernate.connection.password" value="${spring.datasource.password}"/>
      <property name="openjpa.ConnectionURL" value="${spring.datasource.url}"/>
      <property name="openjpa.ConnectionDriverName" value="${spring.datasource.driver-class-name}"/>
      <property name="openjpa.ConnectionUserName" value="${spring.datasource.username}"/>
      <property name="openjpa.ConnectionPassword" value="${spring.datasource.password}"/>
      <property name="eclipselink.jdbc.url" value="${spring.datasource.url}"/>
      <property name="eclipselink.jdbc.driver" value="${spring.datasource.driver-class-name}"/>
      <property name="eclipselink.jdbc.user" value="${spring.datasource.username}"/>
      <property name="eclipselink.jdbc.password" value="${spring.datasource.password}"/>
    </properties>
  </persistence-unit>
</persistence>
